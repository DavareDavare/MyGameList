<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Row="0" Grid.Column="1">
            <Label HorizontalAlignment="Center" FontSize="20">Methoden:</Label>
            <StackPanel Margin="5">
                <Button HorizontalAlignment="Center" x:Name="btnPOST" Content="POST Game" Width="400" Height="40" Margin="5" Click="btnPOST_Click"/>
                <Button HorizontalAlignment="Center" x:Name="btnPUT" Content="PUT Game" Width="400" Height="40" Margin="5"/>
                <Button HorizontalAlignment="Center" x:Name="btnGETID" Content="GET Game by ID" Width="400" Height="40" Margin="5"/>
                <Button HorizontalAlignment="Center" x:Name="btnGETALL" Content="GET All Games" Width="400" Height="40" Margin="5"/>
                <Button HorizontalAlignment="Center" x:Name="btnDELETEID" Content="DELETE Game by ID" Width="400" Height="40" Margin="5"/>
                <Button HorizontalAlignment="Center" x:Name="btnDELETEALL" Content="DELETE All Games" Width="400" Height="40" Margin="5"/>
                
            </StackPanel>
        </StackPanel>    
       
        
        <StackPanel x:Name="gameadd" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Height="40">
                <Label Margin="3" VerticalContentAlignment="Center">Gamename:</Label>
                <TextBox Margin="3" VerticalContentAlignment="Center" Width="300" x:Name="txtGamename"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <Label Margin="3" VerticalContentAlignment="Center">Developer:‎ ‎ ‎</Label>
                <TextBox Margin="3" VerticalContentAlignment="Center" Width="300" x:Name="txtDeveloper"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <Label Margin="3" VerticalContentAlignment="Center">Publisher:ㅤ</Label>
                <TextBox Margin="3" VerticalContentAlignment="Center" Width="300" x:Name="txtPublisher"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <Label Margin="3" VerticalContentAlignment="Center">Console:‎ ‎ ‎ ‎ ‎ ‎</Label>
                <TextBox Margin="3" VerticalContentAlignment="Center" Width="300" x:Name="txtConsole"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <Label Margin="3" VerticalContentAlignment="Center">Description:</Label>
                <TextBox Margin="3" VerticalContentAlignment="Center" Width="300" x:Name="txtDescription"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <Label Margin="3" VerticalContentAlignment="Center">Pegi:‎ ‎ ‎ ‎ ‎ ‎ ‎ ‎  ‎ ‎ ‎ ‎ ‎</Label>
                <TextBox Margin="3" VerticalContentAlignment="Center" Width="300" x:Name="txtPegi"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <Label Margin="3" VerticalContentAlignment="Center">Image Link:‎ ‎</Label>
                <TextBox Margin="3" VerticalContentAlignment="Center" Width="300" x:Name="txtLink"></TextBox>
            </StackPanel>
            <Button x:Name="btnAdd" Content="Add Game" Click="btnAdd_Click" Margin="0,10,0,0" Height="50"/>
        </StackPanel>
        
        <StackPanel x:Name="gameput" >
        
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Height="500" Margin="0,0,0,10">
            <Label>Response:</Label>
            <StackPanel Height="300">
                <ListBox Grid.Row="1" x:Name="lstResponse" Height="250"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="5,0,0,0">
            <StackPanel Margin="0,0,0,0" Width="384" RenderTransformOrigin="0.5,0.5" >
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.231"/>
                        <RotateTransform/>
                        <TranslateTransform Y="0.996"/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
